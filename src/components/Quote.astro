---
interface Props {
    text: string;
    author?: string;
}

const { text, author } = Astro.props;
---

<blockquote class="quote">
    <p set:html={`${text}`}></p>
    {author && <cite>â€” <span set:html={author}></span></cite>}
</blockquote>

<style>
    .quote {
        background-color: #f5f7f9;
        border-left: 4px solid #0066cc;
        margin: 1.5rem 0;
        padding: 1rem 1.5rem;
        border-radius: 0 4px 4px 0;
    }

    .quote p {
        margin: 0 0 0.5rem 0;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .quote cite {
        display: block;
        font-size: 0.9rem;
        text-align: right;
        color: #555;
    }
</style>