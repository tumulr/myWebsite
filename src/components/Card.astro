---
// Define the props that the component accepts
interface Props {
  title: string;
  body: string;
  href?: string;
  imgSrc?: string;
}

// Destructure the props with defaults
const { 
  title, 
  body, 
  href = '#',
  imgSrc 
} = Astro.props;
---

<div class="card">
  {imgSrc && <img src={imgSrc} alt={title} class="card-image" />}
  <div class="card-content">
    <h2 class="card-title">{title}</h2>
    <div class="card-body">
      <Fragment set:html={body} />
    </div>
    <a href={href} class="card-link">Read more</a>
  </div>
</div>

<style>
  .card {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    background-color: white;
  }
  
  .card:hover {
    transform: translateY(-5px);
  }
  
  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .card-content {
    padding: 1.5rem;
  }
  
  .card-title {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.5rem;
    color: #333;
  }
  
  .card-body {
    margin-bottom: 1.5rem;
    color: #666;
    line-height: 1.6;
  }
  
  .card-body :global(pre),
  .card-body :global(code) {
    padding: 0.5rem;
    background-color: #f5f5f5;
    border-radius: 4px;
    overflow-x: auto;
    font-family: monospace;
    font-size: 0.9rem;
    margin: 1rem 0;
  }
  
  .card-body :global(pre) {
    padding: 1rem;
  }
  
  .card-link {
    display: inline-block;
    color: #0066cc;
    text-decoration: none;
    font-weight: 500;
  }
  
  .card-link:hover {
    text-decoration: underline;
  }
</style>